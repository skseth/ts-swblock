{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES2017",
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "..",
    "paths": {
      "@lib/*": ["packages/*", "../packages/*", "../../packages/*"]
    }
  }
}
